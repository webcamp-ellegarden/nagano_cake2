<%= link_to "編集する", edit_user_path %>
<%= link_to "パスワードを変更する",  edit_user_registration_path(@user)%>
<table>
		<tr>
			<td>氏名</td>
			<td><%= @user.family_name %>  <%= @user.first_name %></td>
		</tr>
		<tr>
			<td>フリガナ</td>
			<td><%= @user.family_name_kana %>  <%= @user.first_name_kana %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td> <%= @user.user_address %> </td>
		</tr>
		<tr>
			<td>電話番号</td>
