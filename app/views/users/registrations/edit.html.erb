<h2>登録情報編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- name -->
<div class="field">
  <%= f.label :氏名 %><br />
  <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
</div>

<!-- kana_name -->
<div class="field">
  <%= f.label :氏名（フリガナ） %><br />
  <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
</div>

<!-- email -->
<div class="field">
  <%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<%= render 'layouts/addressform' %>

<!-- tel -->
<div class="field">
  <%= f.label :電話番号（ハイフンなし） %><br />
  <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
</div>

<!-- password -->
<div class="field">
  <%= f.label :パスワード（６文字以上） %>
  <% if @minimum_password_length %>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>
<!-- password-confirmation -->
<div class="field">
  <%= f.label :パスワード（確認用） %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
