<%= render 'layouts/header2' %>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<!-- name -->
<div class="field">
  <%= f.label :氏名 %><br />
  <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
</div>

<!-- kana_name -->
<div class="field">
  <%= f.label :氏名（フリガナ） %><br />
  <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
</div>

<!-- email -->
<div class="field">
  <%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<%= render :partial => 'layouts/addressform', :locals => {:f =>f} %>

<!-- tel -->
<div class="field">
  <%= f.label :電話番号（ハイフンなし） %><br />
  <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
</div>

<!-- password -->
<div class="field">
  <%= f.label :パスワード（６文字以上） %>
  <% if @minimum_password_length %>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>
<!-- password-confirmation -->
<div class="field">
  <%= f.label :パスワード（確認用） %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<p>既に登録済みの方</p>

<%= link_to 'コチラ', new_user_session_path %>からログインしてください

<div class="actions">
  <%= f.submit "新規会員登録" ,class: "btn btn-outline-dark"%>
</div>
<% end %>

