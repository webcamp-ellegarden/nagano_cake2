<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<!-- name -->
<div class="field">
  <%= f.label :氏名 %><br />
  <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
</div>

<!-- kana_name -->
<div class="field">
  <%= f.label :氏名（フリガナ） %><br />
  <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
</div>

<!-- email -->
<div class="field">
  <%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<!-- 郵便番号 -->
<div class="field">
  <%= f.label :郵便番号（ハイフンなし） %><br />
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
</div>
<!-- -----------prefecture_code----------- -->
<div class="field">
  <%= f.label :都道府県 %><br />
  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name ,include_blank: '都道府県' %>
</div>
<!-- address_city -->
<div class="field">
  <%= f.label :市区町村 %><br />
  <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city" %>
</div>
<!-- adress_street -->
<div class="field">
  <%= f.label :番地 %><br />
  <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street" %>
</div>
<!-- address_building -->
<div class="field">
  <%= f.label :建物 %><br />
  <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building" %>
</div>

<div class="field">
  <%= f.label :電話番号（ハイフンなし） %><br />
  <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
</div>

<!-- password -->
<div class="field">
  <%= f.label :パスワード（６文字以上） %>
  <% if @minimum_password_length %>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>
<!-- password-confirmation -->
<div class="field">
  <%= f.label :パスワード（確認用） %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<p>既に登録済みの方</p>

<%= link_to 'コチラ',"new_user_session_path" %>からログインしてください

<div class="actions">
  <%= f.submit "新規登録" %>
</div>
<% end %>

