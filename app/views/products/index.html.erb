<div class="row">
	<div class="col-1">
<!-- 		<%= render 'layouts/category' %> -->
	</div>
	<div class="col-11">
		<% if @category == "1" %>
		  <h3 class="m-top16">ケーキ一覧</h3><span>(全<%= @products.count %>件)</span>
		<% elsif @category == "2" %>
		  <h3 class="m-top16">焼き菓子一覧</h3><spam>(全<%= @products.count %>件)</span>
		<% elsif @category == "3" %>
		  <h3 class="m-top16">プリン一覧</h3><span>(全<%= @products.count %>件)</span>
		<% elsif @category == "4" %>
		  <h3 class="m-top16">キャンディ一覧</h3><span>(全<%= @products.count %>件)</span>
		<% else %>
		  <h3 class="m-top16">商品一覧</h3><span>(全<%= @products.count %>件)</span>
		<% end %>
		<div class="row b-line"></div>
		<div class="row" style="height: 50px;"></div>
		<div class="products-box">
			<% @products.each do |product| %>
			  <div class="product-box">
			  	<div class="image-box">
			  	  <%= link_to product_path(product) do %>
			  	    <div class="hover-box"></div>
			  	  <% end %>
			  	  <%= attachment_image_tag product, :product_image, :fill, 150, 150, class: "img-rounded",fallback: "no_image_lg.jpg" %>
			    </div>
			  	<p>"<%= product.product_name %>"</p>
			  	<p>￥<%= product.product_price %></p>
			  </div>
			<% end %>
			<%= paginate @products %>
		</div>
	</div>
</div>


