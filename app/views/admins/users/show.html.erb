<div class="row">
	<p> <%= @user.familiy_name %><%= @user.first_name %>の会員詳細　</p>
	<table>
		<tr>
			<td>顧客ID</td>
			<% if @user.user_status == 0 %>
				<td>有効会員</td>
			<% else %>
				<td>無効会員</td>
		</tr>
		<tr>
			<td>氏名</td>
			<td><%= @user.familiy_name %>  <%= @user.first_name %></td>
		</tr>
		<tr>
			<td>フリガナ</td>
			<td><%= @user.familiy_name_kana %>  <%= @user.first_name_kana %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= @user.prefecture_code %> <%= @user.address_city %> <%= @user.address_street %> <%= @user.address_building %> </td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= @user.tel %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td><%= link_to "編集する",edit_admins_user_path(user) %></td>
			<td><%= link_to "注文履歴一覧を見る",admins_orders_path%></td>
	    </tr>
	</table>
</div>