<div class="row">
	<p> <%= @user.familiy_name %><%= @user.first_name %>の会員編集　</p>
	<table>
		<%= form_for @user,:url => {:action => :update} do |f| %>
			<tr>
				<td>会員ID</td>
				<td>@user.id</td>
				
			</tr>
			<tr>
				<td>氏名</td>
				<td><%= f.texr_field :familiy_name %>  <%= f.texr_field :first_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td><%= f.texr_field :familiy_name_kana %>  <%= f.texr_field :first_name_kana %></td>
			</tr>
			<tr>
				<%= render 'layouts/addressform' %>
			<tr>
				<td>電話番号</td>
				<td><%= f.texr_field :tel %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= f.text_field :email %></td>
			</tr>
			<tr>
				<td><%= f.submit"変更を保存する" %></td>
		    </tr>
	    <% end %>
	</table>
</div>