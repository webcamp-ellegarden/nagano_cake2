<h1>Admins::Categories#index</h1>
<h3>ジャンル一覧</h3>

<div>
	<%= form_for @category,:url => {:action => :create} do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.select :category_status, Category.category_statuses.keys, include_blank: "-----" %>

		<%= f.submit %>
	<% end %>
</div>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td>
				<%= category.name %>	
			</td>
			<td><%= category.category_status %></td>
			<td></td>
	    </tr>
		<% end %>
	</tbody>
</table>




