<h3>ジャンル一覧</h3>

<div class="row">
    <div class="col-md-5">
		<table class="table">
			<%= form_for @category,:url => {:action => :create} do |f| %>
				<tr>
					<td><p>ジャンル</p></td>
					<td><%= f.text_field :name %></td>
					<td><%= f.select :category_status, Category.category_statuses.keys, include_blank: "-----" %></td>

					<td><%= f.submit "追加" %></td>
				</tr>
			<% end %>
		</table>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @categories.each do |category| %>
			<tr>
				<td>
					<%= category.name %>	
				</td>
				<td><%= category.category_status %></td>
				<td><%= link_to "編集", edit_admins_category_path(category) %></td>
		    </tr>
			<% end %>
		</tbody>
	</table>

</div>




