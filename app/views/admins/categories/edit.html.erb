<%= render 'layouts/header2' %>
<body style="background: #FFFF;color: #000; font-family:monospace" >
  <div class="container">
    <div class="form-group">
      <div class=col-6 style="border-bottom: 1px solid #000;border-left: 10px solid #000;padding: 7px;">
        <h3>ジャンル編集</h3>
          <div class=col-6 style="opacity: 0.5; font-family:cursive" >
            <p>Category Edit</p>
          </div>
      </div>
    </div>

  <%= form_for @category,:url => {:action => :update} do |f| %>
    <table class="table" style="margin-top:30px;">
      <div class="form-group">
        <div class="row">
      	  <div class="col-4">
		    <tr>
		      <td><%= f.label :名前 %>&nbsp;&nbsp;&nbsp;<%= f.text_field :name ,class: "input form-control"%></td>
		    </tr>
		  </div>
	    </div>
	    <div class="row">
	  	  <div class="col-4">
		    <tr>
			  <td><%= f.radio_button :category_status, "有効" %>有効
				<%= f.radio_button :category_status, "無効" %>無効
			  </td>
		    </tr>
          </div>
        </div>
	</table>
	  <%= f.submit"変更を保存", class: "btn btn-defolt"%>
   </div>
  <% end %>
</div>