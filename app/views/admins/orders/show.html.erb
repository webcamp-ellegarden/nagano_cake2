
<div class="container-fluid">
　　
	  
  　<h5>注文履歴詳細</h5>
      
    
   
    <div class="row">
      <div class="col-3">
        <p>購入者</p>
      </div>
          <div class="col-9">
            <p><%= @order.user.family_name %><%= @order.user.first_name %></p>
          </div>
    </div>

    <div class="row">
      <div class="col-3">
        <p>配送先</p>
      </div>
          <div class="col-9">
            <p><%= @order.delivery_address %></p>
          </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <p>支払方法</p>
      </div>
          <div class="col-9">
            <p><%= @order.payment %></p>
          </div>
    </div>    
    
    <div class="row">
      <div class="col-3">
        <p>注文ステータス</p>
      </div>
          <div class="col-9">
          	<%= form_for @order,:url => {:action => :update} do |f| %>
              <%= f.select :order_status, Order.order_statuses.keys %>
                <%= f.submit "更新", class: "btn btn-primary" %>
            <% end %>
              
          </div>
    </div>
    
    <div class="row">
      <div class="col-auto">
        <table class="table">
          <thead>
            <tr>
           	  <th>商品名</th>
           	  <th>単価(税込)</th>
           	  <th>数量</th>
           	  <th>小計</th>
           	  <th>製作ステータス</th>
           	  <th></th>
           			
            </tr>
          </thead>
            <% @order.order_details.each do |order_detail|%>
              <tbody>
                <tr>
                  <td><%= order_detail.product.product_name %></td>         
                  <td><%= order_detail.product_price %></td>          
                  <td><%= order_detail.number %></td>         
                  <td><%= order_detail.number * order_detail.product_price %></td>
                  <td><%= order_detail.making_status %></td>
                </tr>
              </tbody>
            <% end %>
        </table>
      </div>
    </div>
    <div class="text-right">
      <div class="row">
        <div class="col-3">
          <p>商品合計</p>
        </div>
          <div class="col-3">
            <p><%= @order.total_price %>円</p>
          </div>
      </div>
        <div class="row">
          <div class="col-3">
            <p>送料</p>
          </div>
              <div class="col-3">
                <p><%= @order.postage %>円</p>
              </div>
        </div>
        <div class="row">
          <div class="col-3">
      	    <p>請求金額合計</p>
          </div>
              <div class="col-3">
                <p><%= @order.total_price + @order.postage %>円</p>
              </div>
        </div> 
    </div>
</div>



