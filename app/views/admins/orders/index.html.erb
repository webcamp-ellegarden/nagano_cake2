<h1>注文履歴一覧</h1>

 


<table class="table">
	<thead>
		<tr>
		  <th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
			
        </tr>
    </thead>
  

    <% @order.each do |order| %>
      <tbody>
   
        <tr>
    	    <td><%= link_to order.created_at,admins_order_path(order) %></td>
            
    	    <td><%= order.user.family_name %><%= order.user.first_name %></td>
          
    	    <td><%= order.order_details.map(&:number).sum %></td>
          
          <td><%= order.order_status %></td>
        </tr>
 
      </tbody>
  <% end %>
</table>
