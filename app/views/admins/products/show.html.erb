<%= render 'layouts/header2' %>
<body style="background: #FFFF;color: #000; font-family:monospace" >
 
    <div class="form-group">
      <div class=col-6 style="border-bottom: 1px solid #007700;border-left: 10px solid #007700;padding: 7px;">
        <h3>商品詳細</h3>
          <div class=col-6 style="opacity: 0.5; font-family:cursive" >
            <p>Product</p>
          </div>
      </div>
    </div>


   <div class="row">
  	  <dic class="col-4">
        <%= attachment_image_tag @product, :product_image, format: 'jpeg' , size: "200x150" %>
      </dic>
   	  <div class="col-8">
        <p>商品名&nbsp;&nbsp;<%= @product.product_name %></p>
        <p>商品説明&nbsp;&nbsp;<%= @product.product_comment %></p>
        <p>ジャンル&nbsp;&nbsp;<%= @product.category.name %></p>
        <p>税込価格(税抜価格)&nbsp;&nbsp;<%= @product.tax_included.to_i.to_s(:delimited) %>(<%= @product.product_price.to_i.to_s(:delimited) %>)円</p>
        <p>販売ステータス&nbsp;&nbsp;<%= @product.product_status %></p>
       </div>
    </div>
    <div class="text-right">
      <%= link_to "編集する", edit_admins_product_path(@product),class: "btn btn-dark" %>
    </div>

</body>

