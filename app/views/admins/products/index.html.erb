<%= render 'layouts/header2' %>
<body style="background: #FFFF;color: #000; font-family:monospace" >
  <div class="container">
    <div class="form-group">
      <div class=col-6 style="border-bottom: 1px solid #000;border-left: 10px solid #000;padding: 7px;">
        <h3>商品一覧</h3>
          <div class=col-6 style="opacity: 0.5; font-family:cursive" >
            <p>Product index</p>
          </div>
      </div>
    </div>


   <div class="row">
     <div class="col-12">
       <div class="wrap2">
         <%= link_to "New product", new_admins_product_path,class: "button text-center" %>
       </div>
    </div>
  </div>


<table class="table table-hover">
	<thead>
		<tr>
		  <th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
    </tr>
  </thead>


  <% @products.each do |product| %>
    <tbody>

      <tr>
    	  <td><%= product.id %></td>
    	  <td><%= link_to product.product_name, admins_product_path(product),:style=>"color:#000;" %></td>
    	  <td><%= product.product_price.to_i.to_s(:delimited) %></td>
        <td><%= product.category.name %></td>
        <td><%= product.product_status %></td>

      </tr>

    </tbody>
  <% end %>
  <%= paginate @products %>
</table>



