<%= render 'layouts/headerTOP' %>
	<div class="row">
		 <div class="skipper">
			<div id="theTarget">
				<div class="image1"></div>
				<div class="image2"></div>
				<div class="image3"></div>
				<div class="image4"></div>
				<div class="image5"></div>
			</div>
		</div>
	</div>
	<br>
		<h3>PICK UP!</h3><hr>
		<div class="pickup">
			<div class="row" style="height: 50px;"></div>
			<div class="row">
				<div class="col-1"></div>
				<div class="col-11">
				<div class="products-box">
			      <% @products.each do |product| %>
			        <div class="product-box">
			  	      <div class="image-box">
			  	        <%= link_to product_path(product), id: "product_link#{product.id}" do %>
			  	          <div class="hover-box"></div>
			  	        <% end %>
			  	        <% if product.id == 1 || product.id == 2 || product.id == 3 || product.id == 4 %>
			  	          <div class="rounded-circle pick">
			  	  	        <span>PICK UP!</span>
			  	          </div>
			  	        <% end %>
			  	        <% if product.product_status!= "販売中" %>
			  	          <div class="rounded-circle soldout">
			  	  	        <span>Sold Out</span>
			  	          </div>
			  	        <% end %>
			  	        <%= attachment_image_tag product, :product_image, :fill, 150, 150, class: "img-rounded",fallback: "no_image_lg.jpg" %>
			          </div>
			  	      <p>"<%= product.product_name %>"<br>
			  		  ￥<%= product.product_price.to_i.to_s(:delimited) %></p>
			  	      <div class="row" style="height: 10px;"></div>
			        </div>
			      <% end %>
		        </div>
		        </div>
			</div>
			<div class="row">
				<div class="col-10"></div>
				<div class="col-2">
					<%= link_to products_path,  class:"text-danger" do %>
					   <span class="text-dark" >MORE </span><i class="fas fa-forward"></i>
					<% end %>
				</div>
			</div>
			<div class="row" style="height: 30px;"></div>
		</div>
